<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/bj3_min"
    tools:context="just.activities.IllegalActivity">
    <RelativeLayout
        android:id="@+id/id_login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center" >
        <FrameLayout
            android:id="@+id/id_username_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:gravity="center" >
            <EditText
                android:hint="手机号码"
                android:id="@+id/id_et_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:inputType="phone"
                android:textColor="#ffffff"
                android:paddingRight="60dp"
                android:maxLength="11"
                android:paddingLeft="55dp">
            </EditText>
            <ImageView
                android:background="@drawable/m_telephone"
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="left|center_vertical"
                android:visibility="visible" />
            <Button
                android:background="@drawable/ic_delete_register_nick"
                android:id="@+id/id_bt_username_clear"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="right|center_vertical"
                android:visibility="invisible"
                android:layout_marginRight="10dp" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/id_usercode_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_username_layout"
            android:layout_marginTop="6dp"
            android:gravity="center" >
            <EditText
                android:id="@+id/id_et_password"
                android:digits="@string/password_requirement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:paddingRight="60dp"
                android:hint="密码"
                android:textColor="#ffffff"
                android:maxLength="10"
                android:paddingLeft="55dp" >
            </EditText>
            <ImageView
                android:background="@drawable/m_locklock"
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_marginStart="7dp"
                android:layout_marginLeft="7dp"
                android:layout_gravity="left|center_vertical" />
            <!--<Button-->
                <!--android:background="@drawable/ic_login_eye"-->
                <!--android:id="@+id/id_bt_pwd_eye"-->
                <!--android:layout_width="23dp"-->
                <!--android:layout_height="23dp"-->
                <!--android:layout_gravity="right|center_vertical"-->
                <!--android:layout_marginRight="10dp" />-->
            <Button
                android:background="@drawable/ic_delete_register_nick"
                android:id="@+id/id_bt_password_clear"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:visibility="invisible"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"/>
        </FrameLayout>

        <Button
            android:id="@+id/id_bt_login"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_usercode_layout"
            android:layout_marginTop="30dp"
            android:background="#30ffffff"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="\t登\t\t\t\t录" />
        <!--<Button-->
            <!--android:id="@+id/id_bt_login_forget"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignRight="@id/id_bt_login"-->
            <!--android:layout_below="@id/id_bt_login"-->
            <!--android:background="#00000000"-->
            <!--android:text="忘记密码"-->
            <!--android:textColor="#467fd9"-->
            <!--android:textSize="16sp" />-->
        <Button
            android:id="@+id/id_bt_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/id_bt_login"
            android:layout_below="@id/id_bt_login"
            android:background="#30ffffff"
            android:gravity="center"
            android:text="注\t\t\t\t册"
            android:layout_marginTop="15dip"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:visibility="visible" />
    </RelativeLayout>
</RelativeLayout>