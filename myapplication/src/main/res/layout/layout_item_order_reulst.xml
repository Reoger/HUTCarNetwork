<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="#ff00ff"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_order_num"
        android:text="1"
        android:padding="10dp"
        android:textSize="26sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里显示的是账单创建的时间"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/item_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里显示的是账单的支付对象"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/item_order_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里显示的是账单的支付对象"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/item_order_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里显示的是账单的交易方式"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/item_order_trade_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里显示的是账单的交易状态"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/item_order_total_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里显示的是账单的交易费用"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>
