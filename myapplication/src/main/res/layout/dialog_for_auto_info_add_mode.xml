<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_add_auto_info_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:text="请选择添加方式"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:background="@color/side_line"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:layout_marginRight="2dp"
            android:id="@+id/id_bt_manual"
            android:background="#00ffffff"
            android:text="手动添加"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        
        <ImageView
            android:background="@color/side_line"
            android:layout_width="4px"
            android:layout_height="match_parent" />

        <Button
            android:gravity="center"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:id="@+id/id_bt_scan"
            android:background="#00ffffff"
            android:text="扫码添加"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:background="@color/side_line"
            android:layout_width="2px"
            android:layout_height="match_parent" />

        <Button
            android:gravity="center"
            android:background="#00ffffff"
            android:layout_marginLeft="2dp"
            android:id="@+id/id_bt_cancel_auto_info_add_mode"
            android:text="取消"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>